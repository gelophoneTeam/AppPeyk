<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".UnAvailable">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:background="@drawable/toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="105dp"
            android:src="@drawable/ic_videos_purchased" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="106dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="292dp"
        android:layout_height="268dp"
        android:src="@drawable/moto"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خارج از دسترسم"
        android:textColor="#000"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="260dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="100dp"
        android:background="#beb8b8"
        android:layout_gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/su"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        app:thumbTint="#fff"
        android:layout_marginBottom="30dp"
        app:trackTint="#e33838"
        android:layout_gravity="center_horizontal|bottom">

    </android.support.v7.widget.SwitchCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="در دسترسم"
        android:textColor="#bab9b9"
        android:textSize="20sp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خارج از دسترسم"
        android:textColor="#e73939"
        android:textSize="20sp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="230dp"/>

</android.support.design.widget.CoordinatorLayout>