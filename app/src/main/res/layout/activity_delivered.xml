<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".DeliveredActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:background="@drawable/toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="105dp"
            android:src="@drawable/ic_videos_purchased" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="106dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu" />

    </android.support.v7.widget.Toolbar>
    <com.github.channguyen.rsv.RangeSliderView
        android:id="@+id/rsv_small"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="400dp"
        android:rotation="90"
        app:emptyColor="#aeacac"
        app:filledColor="#848384"
        app:rangeCount="3" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="289dp"
        android:layout_height="430dp"
        android:layout_gravity="right"
        android:layout_marginTop="140dp"
        android:dividerHeight="2dp"
        android:divider="#fff"/>


    <com.android.graphics.CanvasView
        android:id="@+id/canvas"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="#000000"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center|bottom"
        android:elevation="5dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محل امضا دیجیتال"
        android:textSize="20dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center_horizontal|bottom"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="70dp"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        app:thumbTint="#fff"
        android:layout_marginBottom="30dp"
        app:trackTint="#2d8ede"
        android:checked="true"
        android:layout_gravity="center_horizontal|bottom">

    </android.support.v7.widget.SwitchCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="در دسترسم"
        android:textColor="#2d8ede"
        android:textSize="20sp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خارج از دسترسم"
        android:textColor="#bab9b9"
        android:textSize="20sp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="230dp"/>


</android.support.design.widget.CoordinatorLayout>